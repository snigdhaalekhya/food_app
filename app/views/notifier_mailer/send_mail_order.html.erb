<div class = "card">
<p> New order placed by the customer with Order Id:   #<%= @order_id %></p>
<p> Customer Name: <%= @user_name %></p>
<p> Customer Mobile number: <%= @user_mobileno%></p>
<p> Customer Address: <%= @user_address%></p>
<% cost=0 %>
<p> Items placed order: </p>
<% @menu.split("+") do |o| %>
        <% str= o.split("*")%>
        <%= str[0]%>
        &nbsp;&nbsp;<%= "X "+str[1]%>
        <% cost=str[2].to_i+cost%>
        &nbsp;&nbsp;&nbsp;&nbsp;= &nbsp; <%= str[2]+" ₹"%>
