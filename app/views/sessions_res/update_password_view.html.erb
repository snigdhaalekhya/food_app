<body style="width:40%;margin-top:40px">
<div class="card3">
<section class="UserNew">
<%= form_with url: signin_restaurant_update_password_path do |form| %>
<br>
<br>
<div class="Form-section1">
<section style="display:flex">
 <p class="FormInput-label">Choose login type<section class="mandatory">*</section></p>
 </section>
<%= form.radio_button :identity, 'Owner' %> Owner<br />
<%= form.radio_button :identity, 'Worker' %> Worker<br />
</div>
<div class="Form-section1">
 <section style="display:flex">
 <p class="FormInput-label"> Email Id<section class="mandatory">*</section></p>
 </section>
 <%= form.email_field :email, class: "Form-input1", placeholder:"Enter email id"%>
</div>
 
 <div class="Form-section1">
 <section style="display:flex">
<p class="FormInput-label">New Password<section class="mandatory">*</section> </p>
</section>
 <%= form.password_field :password, class: "Form-input1", placeholder:"Enter new password "%>
 </div>

 <div class="Form-section1">
 <section style="display:flex">
<p class="FormInput-label">Confirm Password<section class="mandatory">*</section> </p>
</section>
 <%= form.password_field :password_confirm , class: "Form-input1", placeholder:"Enter confirm  password "%>
 </div>

 <div class="Form-section1">
 <%= form.submit "Change_Password", class: "Form-submit1"%>
 </div>

 </section>
<% end%>

</div>
</div>
</body>