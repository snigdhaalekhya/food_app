<body> 
<% if  @check_firstlogin_user %>
<p class = "UserHeader"> Welcome <%= current_user.name%>!</p>
<% end %> 
<section class = "display">

<%= form_tag(main_index_path, method:"get") do%>
    <section class = "SearchMenu">
     <%= search_field_tag :search, params[:search], placeholder: "Search menu",class:"searchmenu"%>
    </section>
  <% end %>
  
<%=form_with(url:"/view_user/category_wise"  , method: "get")  do |form| %>
   <%= form.select :menu_category, AllConstants::CATEGORY ,{:prompt=>"Choose category",},{class:"select select_menus_users",:onchange=>"this.form.submit()"}%>
<% end %>
  
</section>
<% if !params[:search].blank? && @result_count<=0 %>
   <p>Oops no records found!! <p>
<% else %>
<% @results.cachemethod.each do |menu|%>
<div class = "row">
  <div class = "column">
    <div class = "displaycard">
     <br>
     <img src="<%= menu.menu_image%>" class = "menu_image menu_image_users">
      <p class = "name"><%= menu.menu_name %></p>
      <p class = "description"><%= menu.menu_description %></p>
      <p class = "cost"><%= menu.menu_cost%> â‚¹</p>
      <div class = "buttoncard">
      <%= form_with(url: "/carts/#{menu.id}"  , method: "get") do %>
         <input type = "submit" value = "+" class = "buttons_plus_minus plus" name="Add" id = "Add"  >     
      <% end %>
     
       <section class = "count_show">
       <% carts_menuid =currentuser_model(Cart).select{|s| s.menu_id == menu.id }%>
         <% carts_menuid.each do |cart|%>
         <%= cart.count%>   
         <% end%>
      </section>

      <%= form_with(url: "/carts/#{menu.id}/remove"  , method: "get") do %>
         <input type = "submit" value = "-" class = "buttons_plus_minus minus" name="Add" id = "Subtract"  > 
      <% end%>
      </div>
      <br>
    </div>
  </div>
  <% end %>
  <% end %>
</section>
</div>
</body>

