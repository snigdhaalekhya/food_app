<body>
<div class = "card">
<div class = "main_card">
<section>
  <p class = "SidebarComponents"> <%= link_to "Orders", orders_restaurant_path, class:"SidebarComponentsRuby"%></p>
 <p class = "SidebarComponents"> <%= link_to "Menu", menu_restaurant_path, class:"SidebarComponentsRuby"%></p>
  <p class = "SidebarComponents"><%= link_to "Users", users_restaurant_path, class:"SidebarComponentsRuby"%></p>
  <p class = "SidebarComponents"><%= link_to "Reports", reports_restaurant_path, class:"SidebarComponentsRuby"%></p>
</section>
<section class = "style_card">
<section class = "bar_style">
  <%= link_to "Customers", users_restaurant_path, class:"RubySidebar"%>
  <%= link_to "Workers", workers_path, class:"RubySidebar"%>
  <% if Owner.find_by(email: current_owner.email)%>
  <section class = "myDIV">
  <%= button_to " + ", new_worker_path, method: "get", class:"addnew"%>
  </section>
   <div class = "hide" >Add Worker</div>
  <% elsif Worker.find_by(email: current_owner.email)%>
  <section class = "myDIV">
  <%= button_to " + ", new_worker_path, method: "get", class:"addnew" , disabled:"true", style:"cursor:not-allowed;color: white;background-color: grey"%>
  </section>
   <% end %>
  </section>
  <br>
  <hr>
<% Worker.cachemethod.each do |worker|%>
     <br>
      <section class ="display">
      <p class = "user_name">Name: <%= worker.name%> </p> 
      <p class = "user_name">Email Id: <%= worker.email%> </p>
      <p class = "user_name">Mobile No: <%= worker.mobile_no%>
      </section>
      <hr>
<% end%>
<br>
</section>
</div>
</div>
</body>